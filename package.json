{
  "name": "claudecode-slack",
  "version": "1.0.0",
  "description": "A Slack bot built with Bolt framework",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:log": "nodemon --exec ts-node src/index.ts 2>&1 | tee bot.log",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "slack",
    "bot",
    "bolt",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/bolt": "^4.4.0",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
